{
  "manifest_version": 3,
  "name": "Sorteio de Fóruns AVA",
  "version": "1.0.1",
  "description": "Lê a página de fórum do AVA e realiza sorteios de autores em grupos.",
  "icons": {
    "16": "icons/icon_16_v2.png",
    "48": "icons/icon_48_v2.png",
    "128": "icons/icon_128_v2.png"
  },
  "action": {
    "default_title": "Sorteio de Fóruns AVA",
    "default_icon": {
      "16": "icons/icon_16_v2.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting"]
}
